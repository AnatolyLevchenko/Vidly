@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th><h3>Movie</h3></th>
        <th><h3>Genres</h3></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name,"Details","Movies",new {Id=movie.Id},null)</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
    </tbody>
   
</table>

